<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">




    <RelativeLayout
        android:id="@+id/row_item_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <View
            android:id="@+id/broadcast_row_item_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/classify_view_height"
            android:background="@color/colorDivider"/>
        <ImageView
            android:id="@+id/row_title_img"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/broadcast_commend_margin"
            android:layout_marginLeft="@dimen/broadcast_commend_margin"
            android:layout_marginBottom="@dimen/broadcast_commend_margin"
            android:src="@mipmap/title_tag"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/row_title_img"
            android:layout_toRightOf="@+id/row_title_img"
            android:text="@string/row_broadcast"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_alignTop="@+id/row_title_img"
            android:text="@string/more"
            android:gravity="left"
            android:background="@drawable/broadcast_more_btn"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/broadcast_row_item_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/image_default_202"
            android:layout_margin="@dimen/broadcast_commend_margin"/>
        <TextView
            android:id="@+id/broadcast_row_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/broadcast_name"
            android:textColor="#000000"
            android:layout_alignTop="@+id/broadcast_row_item_img"
            android:layout_toRightOf="@+id/broadcast_row_item_img"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/broadcast_row_item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/broadcast_state"
            android:textSize="14sp"
            android:layout_marginTop="@dimen/broadcast_commend_margin"
            android:layout_below="@+id/broadcast_row_item_name"
            android:layout_alignLeft="@+id/broadcast_row_item_name"/>
        <TextView
            android:id="@+id/broadcast_row_item_program"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_alignTop="@+id/broadcast_row_item_state"
            android:layout_toRightOf="@id/broadcast_row_item_state"
            android:layout_marginLeft="@dimen/broadcast_commend_margin"/>
        <ImageView
            android:id="@+id/broadcast_row_item_num_img"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:src="@mipmap/album_play_count"
            android:layout_marginTop="@dimen/broadcast_commend_margin"
            android:layout_below="@+id/broadcast_row_item_state"
            android:layout_alignLeft="@+id/broadcast_row_item_name"/>
        <TextView
            android:id="@+id/broadcast_row_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/broadcast_commend_margin_top"
            android:layout_alignBottom="@+id/broadcast_row_item_num_img"
            android:layout_toRightOf="@+id/broadcast_row_item_num_img"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/album_play"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/broadcast_commend_margin"/>
    </RelativeLayout>
</LinearLayout>