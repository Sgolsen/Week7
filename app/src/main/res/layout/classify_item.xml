<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <View
        android:id="@+id/classify_item_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/classify_view_height"
        android:background="@color/colorDivider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/classify_item_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/classify_click">
            <ImageView
                android:id="@+id/classify_item_image01"
                android:layout_width="@dimen/classify_image_Wh"
                android:layout_height="@dimen/classify_image_Wh"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/classify_item_text01"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/classify_txt_height"
                android:gravity="center_vertical"
                android:text="@string/app_name"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/classify_txt_marginleft"/>
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#dedcdc"/>

        <RelativeLayout
            android:id="@+id/classify_item_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/classify_click">
            <ImageView
                android:id="@+id/classify_item_image02"
                android:layout_width="@dimen/classify_image_Wh"
                android:layout_height="@dimen/classify_image_Wh"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/classify_item_text02"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/classify_txt_height"
                android:gravity="center_vertical"
                android:text="@string/app_name"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/classify_txt_marginleft"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>