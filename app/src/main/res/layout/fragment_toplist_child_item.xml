<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/toplist_child_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:src="@mipmap/image_default_202"/>
        <TextView
            android:id="@+id/toplist_child_title"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="@string/test_text"
            android:textSize="16sp"
            android:textColor="@color/colorTextBlack"
            android:layout_toRightOf="@+id/toplist_child_img"
            android:layout_alignTop="@+id/toplist_child_img"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/toplist_child_item_num_one"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:text="@string/number_one"
            android:layout_alignLeft="@+id/toplist_child_title"
            android:layout_alignTop="@+id/toplist_child_child_title_one"/>
        <TextView
            android:id="@+id/toplist_child_child_title_one"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="@string/test_text"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/toplist_child_item_num_one"
            android:layout_below="@+id/toplist_child_title"
            android:lines="1"/>

        <TextView
            android:id="@+id/toplist_child_item_num_two"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:text="@string/number_two"
            android:layout_alignLeft="@+id/toplist_child_title"
            android:layout_below="@+id/toplist_child_item_num_one"/>
        <TextView
            android:id="@+id/toplist_child_child_title_two"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="3dp"
            android:text="@string/test_text"
            android:layout_toRightOf="@+id/toplist_child_item_num_two"
            android:layout_below="@+id/toplist_child_child_title_one"
            android:lines="1"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/broadcast_more_btn"/>
        <View
            android:layout_width="270dp"
            android:layout_height="1dp"
            android:background="#f0cfd2cf"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/toplist_child_child_title_two"/>
    </RelativeLayout>

</LinearLayout>