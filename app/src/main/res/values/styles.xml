<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 封装控制按钮的样式 -->
    <style name="controller_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/controller_text_color</item>
        <item name="android:layout_marginTop">@dimen/controll_margin_top</item>
    </style>

    <!-- 广播头部LinearLayout样式 -->
    <style name="broadcast_layout_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:orientation">vertical</item>

    </style>

    <!-- 小编推荐图片 style -->
    <style name="recommend_img_style">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">center_horizontal|top</item>

    </style>
    <!-- column 外层layout -->

    <style name="column_layout_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">15dp</item>
    </style>
    <!-- column 内层图片 -->
    <style name="column_img_style">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">60dp</item>

    </style>

    <style name="column_text_style">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
</resources>
