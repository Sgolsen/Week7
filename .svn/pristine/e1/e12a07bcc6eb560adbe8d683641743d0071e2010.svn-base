<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/classify_view_height"
        android:background="@color/colorDivider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/broadcast_commend_margin"
            android:src="@mipmap/category_more"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:text="@string/find_more"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="200dp"
            android:src="@mipmap/ic_more_normal"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/classify_view_height"
        android:background="@color/colorDivider"/>

    <ImageView
        android:id="@+id/recommend_footer_img"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorDivider"/>
</LinearLayout>