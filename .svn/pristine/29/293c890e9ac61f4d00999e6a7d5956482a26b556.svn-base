<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <View
        android:id="@+id/broadcast_recommend_item_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/classify_view_height"
        android:background="@color/colorDivider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="10dp"
            android:src="@mipmap/title_tag"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recommment_broadcast"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/live_recommend_bg"/>

                <ImageView
                    android:id="@+id/broadcast_recommend_item_img_one"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal|top"
                    android:src="@mipmap/image_default_145" />
            </FrameLayout>
            <TextView
                android:id="@+id/broadcast_recommend_item_text_one"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/test_text"
                android:singleLine="true"
                android:ellipsize="end"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/live_recommend_bg"/>

                <ImageView
                    android:id="@+id/broadcast_recommend_item_img_two"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal|top"
                    android:src="@mipmap/image_default_145" />
            </FrameLayout>
            <TextView
                android:id="@+id/broadcast_recommend_item_text_two"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/test_text"
                android:singleLine="true"
                android:ellipsize="end"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/live_recommend_bg"/>

                <ImageView
                    android:id="@+id/broadcast_recommend_item_img_three"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal|top"
                    android:src="@mipmap/image_default_145" />
            </FrameLayout>
            <TextView
                android:id="@+id/broadcast_recommend_item_text_three"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/test_text"
                android:singleLine="true"
                android:ellipsize="end"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>