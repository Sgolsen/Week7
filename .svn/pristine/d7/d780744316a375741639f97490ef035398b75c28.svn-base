<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/recommend_header_viewpager_one"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:background="@color/colorDivider"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/recommend_header_viewpager_two"
        android:layout_width="match_parent"
        android:layout_height="110dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/classify_view_height"
            android:background="@color/colorDivider"/>
        <ImageView
            android:id="@+id/recommend_lv_itrm_img"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/broadcast_commend_margin"
            android:layout_marginLeft="@dimen/broadcast_commend_margin"
            android:layout_marginBottom="@dimen/broadcast_commend_margin"
            android:src="@mipmap/title_tag"/>
        <TextView
            android:id="@+id/recommend_header_title_text_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/recommend_lv_itrm_img"
            android:layout_toRightOf="@+id/recommend_lv_itrm_img"
            android:text="@string/row_broadcast"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_alignTop="@+id/recommend_lv_itrm_img"
            android:text="@string/more"
            android:gravity="left"
            android:background="@drawable/broadcast_more_btn"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/recommend_img_one"
                style="@style/recommend_img_style"
                android:src="@mipmap/image_default_202" />

            <TextView
                android:id="@+id/recommend_text_title_one"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp"
                android:text="@string/test_text"/>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/finding_album_img"
                    android:layout_marginTop="2dp"/>
                <TextView
                    android:id="@+id/recommend_type_one"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="报刊选读"
                    android:layout_marginLeft="5dp"
                    android:textSize="12sp"
                    android:singleLine="true"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/recommend_img_two"
                style="@style/recommend_img_style"
                android:src="@mipmap/image_default_202" />
            <TextView
                android:id="@+id/recommend_text_title_two"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp"
                android:text="@string/test_text"/>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/finding_album_img"
                    android:layout_marginTop="2dp"/>
                <TextView
                    android:id="@+id/recommend_type_two"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="报刊选读"
                    android:layout_marginLeft="5dp"
                    android:textSize="12sp"
                    android:singleLine="true"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

                <ImageView
                    android:id="@+id/recommend_img_three"
                    style="@style/recommend_img_style"
                    android:src="@mipmap/image_default_202" />
            <TextView
                android:id="@+id/recommend_text_title_three"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp"
                android:text="@string/test_text"/>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/finding_album_img"
                    android:layout_marginTop="2dp"/>
                <TextView
                    android:id="@+id/recommend_type_three"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="报刊选读"
                    android:layout_marginLeft="5dp"
                    android:textSize="12sp"
                    android:singleLine="true"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/classify_view_height"
            android:background="@color/colorDivider"/>
        <ImageView
            android:id="@+id/recommend__boutique_title_img"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/broadcast_commend_margin"
            android:layout_marginLeft="@dimen/broadcast_commend_margin"
            android:layout_marginBottom="@dimen/broadcast_commend_margin"
            android:src="@mipmap/title_tag"/>
        <TextView
            android:id="@+id/recommend_header_title_text_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/recommend__boutique_title_img"
            android:layout_toRightOf="@+id/recommend__boutique_title_img"
            android:text="@string/row_broadcast"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_alignTop="@+id/recommend__boutique_title_img"
            android:text="@string/more"
            android:gravity="left"
            android:background="@drawable/broadcast_more_btn"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/recommend_boutique_img_one"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:src="@mipmap/image_default_202"/>
        <TextView
            android:id="@+id/local_title"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="@string/test_text"
            android:textSize="16sp"
            android:textColor="@color/colorTextBlack"
            android:layout_toRightOf="@+id/recommend_boutique_img_one"
            android:layout_alignTop="@+id/recommend_boutique_img_one"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/local_child_title"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="@string/test_text"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/recommend_boutique_img_one"
            android:layout_below="@+id/local_title"
            android:singleLine="true"/>
        <ImageView
            android:id="@+id/recommend_normal_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/finding_album_img"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/recommend_boutique_img_one"
            android:layout_below="@+id/local_child_title"/>
        <TextView
            android:id="@+id/local_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:text="000"
            android:layout_toRightOf="@+id/recommend_normal_img"
            android:layout_below="@+id/local_child_title"/>
        <Button
            android:id="@+id/recommend_boutique_btn_one"
            android:layout_width="10dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/broadcast_more_btn"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="280dp"
            android:layout_height="1dp"
            android:background="#e1dfdf"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/recommend_boutique_img_two"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:src="@mipmap/image_default_202"/>
        <TextView
            android:id="@+id/recommend_boutique_title_two"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="@string/test_text"
            android:textSize="16sp"
            android:textColor="@color/colorTextBlack"
            android:layout_toRightOf="@+id/recommend_boutique_img_two"
            android:layout_alignTop="@+id/recommend_boutique_img_two"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/recommend_boutique_child_title_two"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="@string/test_text"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/recommend_boutique_img_two"
            android:layout_below="@+id/recommend_boutique_title_two"
            android:singleLine="true"/>
        <ImageView
            android:id="@+id/recommend_normal_img_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/finding_album_img"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/recommend_boutique_img_two"
            android:layout_below="@+id/recommend_boutique_child_title_two"/>
        <TextView
            android:id="@+id/recommend_boutique_count_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:text="000"
            android:layout_toRightOf="@+id/recommend_normal_img_two"
            android:layout_below="@+id/recommend_boutique_child_title_two"/>
        <Button
            android:id="@+id/recommend_boutique_btn_two"
            android:layout_width="10dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/broadcast_more_btn"/>
    </RelativeLayout>
</LinearLayout>