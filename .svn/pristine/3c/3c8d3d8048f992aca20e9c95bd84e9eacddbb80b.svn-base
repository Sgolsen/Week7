<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/broadcast_lv_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/broadcast_commend_margin"
    android:orientation="horizontal">
        <LinearLayout
            style="@style/broadcast_layout_style">
        <Button
            android:id="@+id/broadcast_local_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/broadcast_local"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/local"
                android:layout_marginTop="10dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            style="@style/broadcast_layout_style">
            <Button
                android:id="@+id/broadcast_national_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/broadcast_national"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/national"
                android:layout_marginTop="10dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            style="@style/broadcast_layout_style">
            <Button
                android:id="@+id/broadcast_province_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/broadcast_province"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/province"
                android:layout_marginTop="10dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            style="@style/broadcast_layout_style">
            <Button
                android:id="@+id/broadcast_net_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/broadcast_net"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/net"
                android:layout_marginTop="10dp"
                android:gravity="center"/>
        </LinearLayout>
</LinearLayout>
</LinearLayout>