<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/recommend_child_item_img_one"
                style="@style/recommend_img_style"
                android:src="@mipmap/image_default_202" />

            <TextView
                android:id="@+id/recommend_child_item_title_one"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp"
                android:text="@string/test_text"/>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/finding_album_img"
                    android:layout_marginTop="2dp"/>
                <TextView
                    android:id="@+id/recommend_child_item_nick_one"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="报刊选读"
                    android:layout_marginLeft="5dp"
                    android:textSize="12sp"
                    android:singleLine="true"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/recommend_child_item_img_two"
                style="@style/recommend_img_style"
                android:src="@mipmap/image_default_202" />
            <TextView
                android:id="@+id/recommend_child_item_title_two"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp"
                android:text="@string/test_text"/>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/finding_album_img"
                    android:layout_marginTop="2dp"/>
                <TextView
                    android:id="@+id/recommend_child_item_nick_two"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="报刊选读"
                    android:layout_marginLeft="5dp"
                    android:textSize="12sp"
                    android:singleLine="true"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/recommend_child_item_img_three"
                style="@style/recommend_img_style"
                android:src="@mipmap/image_default_202" />
            <TextView
                android:id="@+id/recommend_child_item_title_three"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp"
                android:text="@string/test_text"/>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/finding_album_img"
                    android:layout_marginTop="2dp"/>
                <TextView
                    android:id="@+id/recommend_child_item_nick_three"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="报刊选读"
                    android:layout_marginLeft="5dp"
                    android:textSize="12sp"
                    android:lines="1"
                    android:ellipsize="end"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>